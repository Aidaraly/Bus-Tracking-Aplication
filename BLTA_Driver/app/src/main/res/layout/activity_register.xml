<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@drawable/gradient_backround">

    <EditText
        android:id="@+id/register_Name_editText"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/edittext_border"
        android:gravity="center"
        android:hint="Enter name"
        android:inputType="textCapSentences"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/register_busNum_editText"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@+id/register_Name_editText"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/edittext_border"
        android:gravity="center"
        android:hint="Choose Bus Num"
        android:inputType="number"
        android:paddingRight="10dp"
        android:textColorHint="@color/white" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:hint="E-mail"
        android:paddingRight="10dp"
        android:layout_gravity="center"
        android:background="@drawable/edittext_border"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textColorHint="@color/white"
        android:id="@+id/register_Email_editText"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/register_busNum_editText"
        android:inputType="textEmailAddress"
        />
    <EditText
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:hint="Choose Password"
        android:paddingRight="10dp"
        android:layout_gravity="center"
        android:background="@drawable/edittext_border"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textColorHint="@color/white"
        android:id="@+id/register_passwordChoose_editText"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/register_Email_editText"
        android:inputType="textPassword"
        />
    <EditText
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:hint="Confirm Password"
        android:paddingRight="10dp"
        android:layout_gravity="center"
        android:background="@drawable/edittext_border"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textColorHint="@color/white"
        android:id="@+id/register_passwordConfirm_editText"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/register_passwordChoose_editText"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/register_btn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        android:background="@drawable/edittext_border"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:text="REGISTER"
        android:textColor="@color/white"

        android:textSize="18dp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/register_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_passwordConfirm_editText"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        />




</RelativeLayout>